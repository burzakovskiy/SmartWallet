<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/report_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@drawable/report_card_background"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp">

        <ImageButton
            android:id="@+id/report_card_date_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_stroke"
            android:padding="8dp"
            android:src="@drawable/ic_calendar_grey_24dp" />

        <TextView
            android:id="@+id/report_card_date_text_view"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/report_card_date_picker_button"
            android:layout_toRightOf="@+id/report_card_date_picker_button"
            android:layoutDirection="ltr"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp" />

        <ImageView
            android:id="@+id/report_card_comment_set_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/report_card_comment_button"
            android:layout_toStartOf="@+id/report_card_comment_button"
            android:src="@drawable/ic_check_green_24dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/report_card_comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_stroke"
            android:padding="8dp"
            android:src="@drawable/ic_comment_grey_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr">

        <RelativeLayout
            android:id="@+id/report_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layoutDirection="ltr">


        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>