<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weekly_report_general_card_list_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/weekly_report_general_card_summary_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/weekly_report_general_card_list_header_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="bottom"

            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/weekly_report_general_card_list_header_this_week_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/weekly_report_general_card_list_header_last_week_text_view"
            android:layout_toStartOf="@+id/weekly_report_general_card_list_header_last_week_text_view"
            android:gravity="end|bottom"
            android:text="@string/this_week"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/weekly_report_general_card_list_header_last_week_text_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/weekly_report_general_card_list_header_delta_text_view"
            android:layout_toStartOf="@+id/weekly_report_general_card_list_header_delta_text_view"
            android:gravity="end|bottom"
            android:text="@string/last_week"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/weekly_report_general_card_list_header_delta_text_view"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:gravity="end|bottom"


            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/weekly_report_general_card_list_header_title_text_view"
            android:layout_marginTop="8dp"
            android:background="#ddd" />


    </RelativeLayout>

</LinearLayout>